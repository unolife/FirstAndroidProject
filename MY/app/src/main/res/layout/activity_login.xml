<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffbf5"
    >

    <ImageView
        android:id="@+id/ImageView_mju"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:src="@drawable/icon_beige" />

    <TextView
        android:id="@+id/TextView_major"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:text="융합소프트웨어"
        android:gravity="center"
        android:layout_below="@+id/ImageView_mju"/>

    <LinearLayout
        android:id="@+id/LinearLayout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/TextView_major"
        android:background="#90ffffff">
        <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/TextInputEditText_ID"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="ID" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/TextInputEditText_password"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:hint="PASSWORD"
                android:inputType="textPassword"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/Button_Iogin"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="17dp"
            android:background="@drawable/btn_login"
            android:text="로그인"
            android:textColor="#ffff"
            android:textSize="17dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#90ffffff"
        android:layout_below="@id/LinearLayout_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:weightSum="10">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:background="#90ffffff"
            android:gravity="center"
            android:text="아이디/비밀번호찾기"
            android:textColor="#ff777777"
            android:textSize="16dp" />

        <Button
            android:id="@+id/Button_join"
            android:background="#90ffffff"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="회원가입"
            android:textColor="#ff777777"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>