<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="융합소프트웨어학부"
            android:textSize="30sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30sp"
                android:layout_marginTop="30dp"
                android:src="@drawable/mj_uni" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="30dp"
                android:text="Tel :  \n\n\nMap : 인문캠퍼스 본관 3층 " />

            <TextView
                android:id="@+id/mj_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="70dp"
                android:layout_marginRight="80dp"
                android:autoLink="phone"
                android:text="02-300-0643" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:text=
                "융합소프트웨어학부는 소프트웨어 융합 시대에
                \n걸맞도록 국제화된 감각, 인문학적 소양을 겸비한
                \n소프트웨어 엔지니어를 양성하는 것을 교육 목표로
                \n삼는다. 세부 전공인 응용소프트웨어와
                \n데이터테크놀로지를 중심으로 세부 융합 도메인에
                \n맞는 전문성 있고 체계적인 교육을 실시하여
                \n전문가를 양성하고자 한다. " />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/major_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="33dp"
                android:layout_marginTop="30dp"
                android:text="응용소프트웨어 전공" />

            <Button
                android:id="@+id/major_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:text="데이터테크놀로지 전공" />

            <Button
                android:id="@+id/intro_academy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginTop="95dp"
                android:text="학회 소개" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>