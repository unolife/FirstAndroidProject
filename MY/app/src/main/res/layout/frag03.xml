<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/LinearLayout_comscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/comscore"
            android:layout_marginRight="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="학점: "
            />
        <EditText
            android:layout_marginRight="8dp"
            android:id="@+id/comscoreinput"
            android:layout_width="70dp"
            android:visibility="visible"
            android:layout_height="40dp" />

        <ToggleButton
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_login"
            android:textOff="저장"
            android:textOn="수정"
            android:textSize="13sp" />
    </LinearLayout>
    <TableLayout
        android:id="@+id/TableLayout_scoretable"
        android:layout_below="@id/LinearLayout_comscore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginTop="25dp">

            <TextView android:layout_width="97dp" />
            <TextView
                android:layout_width="80dp"
                android:text="1학기"
                android:gravity="center"/>
            <TextView
                android:layout_width="90dp"
                android:text="2학기"
                android:gravity="center"/>
        </TableRow>

        <TableRow>

            <TextView
                android:gravity="center"
                android:layout_width="72dp"
                android:text="1학년" />
            <EditText android:layout_width="90dp"
                />
            <EditText android:layout_width="90dp" />
            <ToggleButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:textOff="저장"
                android:textOn="수정"
                android:textSize="13sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="center"
                android:layout_width="70dp"
                android:text="2학년" />
            <EditText android:layout_width="90dp" />
            <EditText android:layout_width="90dp" />
            <ToggleButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:textOff="저장"
                android:textOn="수정"
                android:textSize="13sp" />
        </TableRow>

        <TableRow>
            <TextView
                android:gravity="center"
                android:layout_width="70dp"
                android:text="3학년" />
            <EditText android:layout_width="90dp" />
            <EditText android:layout_width="90dp"/>
            <ToggleButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_login"
                android:textOff="저장"
                android:textOn="수정"
                android:textSize="13sp" />
        </TableRow>
        <TableRow>
            <TextView
                android:gravity="center"
                android:layout_width="60dp"
                android:text="4학년" />
            <EditText android:layout_width="90dp" />
            <EditText android:layout_width="90dp" />
            <ToggleButton
                android:layout_marginLeft="10dp"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_calcaulation"
                android:textOff="저장"
                android:textOn="수정"
                android:textSize="13sp" />
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TableLayout_scoretable"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_marginLeft="90dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은학점: "
            android:layout_marginRight="16dp"
            android:textSize="18dp" />
        <TextView android:text="-"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"/>
    </LinearLayout>
</RelativeLayout>